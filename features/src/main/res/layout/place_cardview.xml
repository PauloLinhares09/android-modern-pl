<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/margin_16"
    app:cardElevation="4dp"
    android:layout_margin="@dimen/margin_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/venueImageView"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="@dimen/size_120"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/venueNameTextView"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            style="@style/H1"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            tools:text="Venue Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/venueImageView"
            app:layout_constraintTop_toBottomOf="@+id/venueImageView" />

        <TextView
            android:id="@+id/priceRangeTextView"
            style="@style/Description"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/venueNameTextView"
            app:layout_constraintStart_toStartOf="@id/venueNameTextView"
            app:layout_constraintTop_toBottomOf="@id/venueNameTextView"
            tools:text="Price Range" />

        <TextView
            android:id="@+id/userRatingTextView"
            style="@style/SubDescription"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/priceRangeTextView"
            app:layout_constraintStart_toStartOf="@id/priceRangeTextView"
            app:layout_constraintTop_toBottomOf="@id/priceRangeTextView"
            tools:text="User Rating" />

        <TextView
            android:id="@+id/distanceTextView"
            style="@style/SmallInfo"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/userRatingTextView"
            app:layout_constraintStart_toStartOf="@id/userRatingTextView"
            app:layout_constraintTop_toBottomOf="@id/userRatingTextView"
            tools:text="Distance" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
